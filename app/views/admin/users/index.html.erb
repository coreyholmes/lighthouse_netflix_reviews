<ol class="breadcrumb" data-no-turbolink="true">
  <li><i class="fa fa-arrow-circle-left"></i> <%= link_to "Go Home", root_path %></li>
  <p class="white right">User Count: <span class="badge"><%= User.all.count %></span> Admin Access: <span class="badge"><%= @admin_count %></span></p>
</ol>

<div class="panel panel-default">
  <table class="table">
    <th>User ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th>Created</th>
    <th>Updated</th>
    <th>Edit</th>
    <th>Delete</th>
    
    <% @users.each do |user| %>
    <tr>
    <td><%= user.id %></td>
    <td><%= user.full_name %></td>
    <td><%= user.email %></td>
    <% if user.is_admin %>
    <td><i class="fa fa-check"></i></td>
    <% else %>
    <td><i class="fa fa-close"></i></td>
    <% end %>
    <td><%= user.created_at.strftime('%B %Y') %></td>
    <td><%= user.updated_at.strftime('%B %Y') %></td>
    <td><%= link_to "Edit", edit_admin_user_path(user.id) %></a></td>
    <td><%= link_to "Delete", admin_user_path(user.id), method: :delete, data: { confirm: "Delete #{user.full_name}?" } %></td>
    </tr>
    <% end %>
  </table>
</div>

<span class="right"><%= paginate @users %></span>
