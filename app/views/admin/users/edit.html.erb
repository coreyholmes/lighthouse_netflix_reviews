<ol class="breadcrumb">
  <li><i class="fa fa-arrow-circle-left"></i> <%= link_to "Go Back", admin_users_path %></li>
  <p class="white right">User Since: <%= @user.created_at.strftime('%B %Y') %></p>
</ol>

<%= form_for([:admin, @user]) do |f| %>
<div class="row">
  <div class="col-md-5">
  <div class="col-sm-12">
    <h2 class="white"><%= @user.full_name %></h2><hr>
  </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <div class="form-group">
            <div>
              <%= f.label :firstname, "First Name" %><br>
              <%= f.text_field :firstname, class: "form-control" %>
            </div>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="form-group">
            <div>
              <%= f.label :lastname, "Last Name" %><br>
              <%= f.text_field :lastname, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
    </div>

     <div class="col-sm-12">
        <div class="form-group">
          <div>
          <%= f.label :email %><br>
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
    </div>
    
    <div class="col-sm-12">
      <div> 
        <%= f.check_box :is_admin %>
        <label for="id_admin" class="white">Admin</label>
      </div>
    </div>

    <div class="col-sm-12">
      <div>
        <%= f.submit "Submit", class: "btn btn-danger" %> 
      </div>
    </div>
  </div>
</div>
<% end %>

