<%= form_for @movie, html: { mulitpart: true } do |f| %>

   <div class="form-group">
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <div>
      <%= f.label :release_date %><br>
      <%= f.date_field :release_date, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <div>
      <%= f.label :director %><br>
      <%= f.text_field :director, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <div>
      <%= f.label :runtime_in_minutes %><br>
      <%= f.number_field :runtime_in_minutes, class: "form-control"  %>
    </div>
  </div>
  
  <div class="form-group">
    <div>
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>
  </div>

  <div class="form-group">
    <div>
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control"  %>
    </div>
  </div>

  <div>
    <%= f.submit "Submit", class: "btn btn-danger" %> 
  </div>
  
<% end %>

