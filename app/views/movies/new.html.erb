<ol class="breadcrumb">
  <li><i class="fa fa-arrow-circle-left"></i> <%= link_to "Back to all movies", movies_path %></li>
</ol>

<div class="row">
  <div class="col-md-12">
    <% if @movie.errors.any? %>
      <div>
        Oops, we found <%= pluralize(@movie.errors.count, "problem") %>:
        <ul>
          <% @movie.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <!-- <h2>Add Movie</h2> -->
    <%= render 'form' %>
  </div>
</div>